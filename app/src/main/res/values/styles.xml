<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="textNormal">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="textForPartner">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">#098FB3</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="textLink">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:textColor">#098FB3</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="btnNormal">
        <item name="background">@color/colorRed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhile</item>
        <item name="height">40dp</item>
    </style>

    <!-- Coo    -->
    <style name="coo_yen_hoa">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">#FF0055</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="address_coo">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="input_address_coo">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="about_space">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="simply_dumm">
        <item name="android:typeface">normal</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">#C4C4C4</item>
    </style>

    <style name="view_more">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">#098FB3</item>
    </style>

    <style name="detail_icon">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">#6E6E6E</item>
    </style>

    <style name="textCost">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">#3EC6FF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="stepStatus">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="titleRoom">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>
