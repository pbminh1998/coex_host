    <RelativeLayout
        android:id="@+id/rl_error_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_noti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Please scan QR code"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_scan_qrcode"
            style="@style/ButtonQRCode"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:text="Scan QR code"
            android:layout_marginBottom="@dimen/distance_item_to_borber_layout"/>
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_information"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TitleInformation"
                    android:text="Information of customer:"
                    android:layout_marginTop="@dimen/distance_title_information_to_top_screen"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Email:" />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="Nguyen Thien Bao"
                        android:textAlignment="textEnd" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Phone number:" />

                    <TextView
                        android:id="@+id/tv_phone_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="Nguyen Thien Bao"
                        android:textAlignment="textEnd" />
                </LinearLayout>
            </LinearLayout>

            <ImageView style="@style/BarrierLineInfo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TitleInformation"
                    android:text="Information of transaction:"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Number of guests:" />

                    <TextView
                        android:id="@+id/tv_number_guests"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="Nguyen Thien Bao"
                        android:textAlignment="textEnd" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Time of appointment:" />

                    <TextView
                        android:id="@+id/tv_time_appointment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="Nguyen Thien Bao"
                        android:textAlignment="textEnd" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Duration:" />

                    <TextView
                        android:id="@+id/tv_duration"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="Nguyen Thien Bao"
                        android:textAlignment="textEnd" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Payment:" />

                    <TextView
                        android:id="@+id/tv_payment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="Nguyen Thien Bao"
                        android:textAlignment="textEnd" />
                </LinearLayout>
            </LinearLayout>

            <ImageView style="@style/BarrierLineInfo"/>

            <TextView
                style="@style/TitleInformation"
                android:text="Total Amount:"/>
            <TextView
                android:id="@+id/tv_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="2.000.000 VND"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/distance_item_to_borber_layout">
            <Button
                style="@style/ButtonQRCode"
                android:id="@+id/btn_cancle"
                android:layout_weight="6"
                android:text="Back"
                android:backgroundTint="@color/colorAccent"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                style="@style/ButtonQRCode"
                android:id="@+id/btn_check_in_out"
                android:layout_weight="6"
                android:text="Check in"/>

            <Button
                style="@style/ButtonQRCode"
                android:id="@+id/btn_check_out"
                android:layout_weight="6"
                android:text="Check out"
                android:visibility="gone"
                />

            <TextView
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_vertical|center_horizontal"
                android:id="@+id/txtFinish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction finish"
                style="@style/view_more"
                android:visibility="gone"
                android:layout_weight="6"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>